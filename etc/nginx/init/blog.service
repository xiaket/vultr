[Unit]
Description=blog
After=docker.service
Requires=docker.service

[Service]
WorkingDirectory=/data/etc/nginx/docker
Restart=always
TimeoutStartSec=0
ExecStartPre=/usr/bin/env docker-compose pull
ExecStart=/usr/bin/env docker-compose up --force-recreate
ExecStop=/usr/bin/env docker-compose stop
ExecStopPost=/usr/bin/env docker-compose down

[Install]
WantedBy=multi-user.target
Alias=blog.service
